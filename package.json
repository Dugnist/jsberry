{
  "name": "jsberry",
  "version": "0.0.4",
  "description": "open-source architecture node.js",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development nodemon ./src/entry.js",
    "prod": "cross-env NODE_ENV=production node ./src/entry.js",
    "prodpm": "cross-env NODE_ENV=production pm2 start ./src/entry.js -i max",
    "inspect": "cross-env NODE_ENV=development node --inspect-brk=9229 ./src/entry.js",
    "check": "nsp check",
    "protect": "snyk test",
    "precommit": "lint-staged",
    "install-express": "npm i -D express body-parser helmet cors compression"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dugnist/jsberry.git"
  },
  "keywords": [
    "architecture",
    "node.js",
    "javascript"
  ],
  "nodemonConfig": {
    "ignore": [
      "public/*",
      "node_modules/*"
    ]
  },
  "author": "Dugnist Alexey",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Dugnist/jsberry/issues"
  },
  "homepage": "https://github.com/Dugnist/jsberry#readme",
  "devDependencies": {
    "eslint-config-google": "^0.8.1",
    "graphql": "^0.13.2",
    "joi": "^13.4.0",
    "mongoose": "^5.4.16",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "sendmail": "^1.4.1",
    "socket.io": "^2.0.3"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "cross-env": "^5.0.5",
    "cryptiles": "^4.1.3",
    "eslint": "^5.15.0",
    "husky": "^0.14.3",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.17.5",
    "snyk": "^1.135.1"
  },
  "snyk": true
}
