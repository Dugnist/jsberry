{

  "name": "JsBerry",
  "mode": "dev",
  "logs": "logs",
  "clearLogsTime": "86400000",

  "dir": {

    "modules": "modules",
    "public": "public"

  },

  "dev": {

    "mode": "development",
    "port": 8000,
    "origin": "*",
    "access_headers": "Content-Type, Authorization",
    "access_methods": "GET, POST, DELETE, PUT, OPTIONS",
    "api_path": ""

  },

  "prod": {

    "mode": "production",
    "port": 8080,
    "origin": "https://example.com",
    "access_headers": "Content-Type, Authorization",
    "access_methods": "GET, POST, DELETE, PUT, OPTIONS",
    "api_path": "/api"

  }

}